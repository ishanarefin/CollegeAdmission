<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/img3"
    android:theme="@android:style/Theme.Light.NoTitleBar"
    tools:context="com.example.yousuf.collegeadmission.With_All_Input">
    <GridLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:columnCount="4"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group"
        android:id="@+id/textView"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentStart="true" />


        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Group_"
            android:layout_row="0"
            android:layout_column="1"
            android:entries="@array/Group_"/>


        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Board"
        android:id="@+id/textView2"
        android:layout_row="1"
        android:layout_column="0"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Board_"
            android:layout_row="1"
            android:layout_column="1"
            android:entries="@array/Board_"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roll No"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Roll_No"
        android:layout_below="@+id/textView2"
        android:layout_row="2"
        android:layout_column="1"
        android:inputType="number"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentStart="true" />
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Year_"
            android:layout_row="3"
            android:layout_column="1"
            android:entries="@array/Year_"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shift"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentStart="true" />


        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Shift_"
            android:layout_row="4"
            android:layout_column="1"
            android:entries="@array/Shift_"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Version_"
            android:layout_row="5"
            android:layout_column="1"
            android:entries="@array/Version_"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quota"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="50dp"
        android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Quota_"
            android:layout_row="6"
            android:layout_column="1"
            android:entries="@array/Quota_"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply"
        android:id="@+id/Apply_"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView6"
        android:layout_marginLeft="60dp"
        android:layout_row="7"
        android:layout_column="1"
        android:textSize="25dp"
        android:minHeight="45dp"
        android:minWidth="85dp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="147dp" />


    </GridLayout>
</ScrollView>



