<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/img3"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">
    <GridLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:columnCount="5"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Board Name For Apply"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginBottom="11dp"
        android:layout_centerHorizontal="true" />



    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dhaka Board"
        android:id="@+id/Dhaka_Board"
        android:layout_below="@+id/button"
        android:layout_row="1"
        android:layout_column="0"
        android:textSize="11dp"
        android:maxHeight="5dp"
        android:minWidth="280dp"
        android:background="@android:color/holo_blue_light"
        android:onClick="Dhaka_Board"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_alignStart="@+id/button" />


        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chittagong Board"
            android:id="@+id/Chittagong_Board"
            android:layout_below="@+id/button"
            android:textSize="11dp"
            android:maxHeight="5dp"
            android:minWidth="280dp"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="Chittagong_Board"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:background="@android:color/holo_blue_light"
            android:layout_alignStart="@+id/button" />


        <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comilla Board"
        android:id="@+id/Comilla_Board"
        android:layout_below="@+id/button"
        android:layout_row="3"
        android:layout_column="0"
            android:textSize="11dp"
            android:maxHeight="5dp"
            android:minWidth="280dp"
            android:onClick="Comilla_Board"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:background="@android:color/holo_blue_light"
        android:layout_alignStart="@+id/button" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Barisal Board"
        android:id="@+id/Barisal_Board"
        android:layout_row="4"
        android:layout_column="0"
        android:textSize="11dp"
        android:maxHeight="5dp"
        android:minWidth="280dp"
        android:layout_below="@+id/button"
        android:background="@android:color/holo_blue_light"
        android:onClick="Barisal_Board"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_alignStart="@+id/button" />





        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jessore Board"
            android:onClick="Jessore_Board"
            android:id="@+id/Jessore_Board"
            android:layout_below="@+id/button"
            android:layout_row="5"
            android:layout_column="0"
            android:textSize="11dp"
            android:maxHeight="5dp"
            android:minWidth="280dp"
            android:background="@android:color/holo_blue_light"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_alignStart="@+id/button" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rajshahi Board"
            android:onClick="Rajshahi_Board"
            android:id="@+id/Rajshahi_Board"
            android:layout_below="@+id/button"
            android:layout_row="6"
            android:layout_column="0"
            android:textSize="11dp"
            android:maxHeight="5dp"
            android:minWidth="280dp"
            android:background="@android:color/holo_blue_light"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_alignStart="@+id/button" />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sylhet Board"
            android:onClick="Sylhet_Board"
            android:id="@+id/Sylhet_Board"
            android:layout_below="@+id/button"
            android:layout_row="7"
            android:layout_column="0"
            android:textSize="11dp"
            android:maxHeight="5dp"
            android:minWidth="280dp"
            android:background="@android:color/holo_blue_light"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_alignStart="@+id/button" />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dinajpur Board"
            android:onClick="Dinajpur_Board"
            android:id="@+id/Dinajpur_Board"
            android:layout_below="@+id/button"
            android:layout_row="8"
            android:layout_column="0"
            android:textSize="11dp"
            android:maxHeight="5dp"
            android:minWidth="280dp"
            android:background="@android:color/holo_blue_light"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_alignStart="@+id/button" />


    </GridLayout>
</ScrollView>





